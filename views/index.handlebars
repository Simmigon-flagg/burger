

<div class="row">
{{!-- <divclass="clearfix"></div> --}}
  <div class="col s6">    
      {{#each burgers}}
        {{#if devoured}} 
            {{> burgers/burger-block devoured=false}} 
        {{/if}}
      {{/each}}

  </div>

  <div class="col s6">

      {{#each burgers}} 
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}} 
      {{/each}}
  </div>
 
</div>


<div class="row">
  <div class="col s6 offset-s3">
    <form class="create-form">

      <div class="form-group">
        <label for="bur"></label>
        <textarea class="materialize-textarea" placeholder="Burger" id="bur" name="name"></textarea>
      </div>
    </form>
</div>
 
<div class="row">
  <div class="col s8 offset-s5">
    <form class="create-form">
      <div class="form-group">
        <input type="radio" name="devoured" value="1" checked> <br>
        <input type="radio" name="devoured" value="0">
      </div>
      {{!-- <a class="waves-effect waves-light btn">Add devoured</a> --}}
      <button class="btn waves-effect waves-light" type="submit" name="action">Enter <i class="material-icons right">send</i></button>
    </form>

  </div>
</div>

<div class="row">
  <div class="col s8 offset-s3"> Enter a burger you want to eat and click the "Submit" button</div>
</div>